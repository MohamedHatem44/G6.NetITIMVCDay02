@{
    var emps = ViewBag.allEmps;
}


<h1>All Employees</h1>


<table class="table text-center">
    <thead>
        <tr>
            <th scope="col">Employee Id</th>
            <th scope="col">Employee Name</th>
            <th scope="col">Employee Age</th>
            <th scope="col">Employee Salary</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in emps)
        {
            <tr>
                <td scope="col">@item.Id</td>
                <td scope="col">@item.Name</td>
                <td scope="col">@item.Age</td>
                <td scope="col">@item.Salary</td>
                <td scope="col">
                    <a href="~/Employee/ViewDetails/@item.Id" class="btn btn-primary">View</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <a href="~/Employee/Create" class="btn btn-success">Add Employee</a>
    </tfoot>
</table>
